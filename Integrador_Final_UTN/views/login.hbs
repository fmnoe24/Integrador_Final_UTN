<div class="container py-4">
   <div class="row justify-content-center">
       <div class="col-11 col-md-8  ">
            <form action="login" method="post" class="container py-4 bg-dark text-white">
                <label for="user" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="user" name="user" placeholder="Ingrese su Usuario" autofocus>
                <label for="password" class="form-label mt-3">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su Contraseña">
                {{#if msg}}
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                    class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
                    aria-label="Warning:">
                    <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div>
                {{msg}}
                </div>
                </div>
                {{/if}}
                <button type="submit" class="btn btn-primary my-2">Iniciar sesion</button>
            </form>
       </div>
   </div>
</div>