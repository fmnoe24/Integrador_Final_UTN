
    <div class="card border-0" >
        <img class="img-fluid"src="/images/Banner-contacto.jpg" class="card-img-top" alt="...">
    </div>
    
    <div class="container">
        <h2 class="text-center mb-5 mt-5">Contactate con Nosotros</h2>
    </div>

    <form action="/contacto" method="post" class="container mb-5 mt-5" >
        {{#each arrayDeErrores}}
        <div class="d-flex justify-content-center" >
        <p class="alert alert-danger fw-bold " role="alert">{{msg}}</p>
        </div>
        {{/each}}
        <div class="mb-3">
            <label for="name" class="form-label" >Nombre</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Ingrese aquí su Nombre y Apellido" autofocus
            {{#if datosForm.name}} value="{{datosForm.name}}" {{/if}}>
        </div>
        <div class="mb-3">
            <label for="tel" class="form-label" >Teléfono</label>
            <input type="number" class="form-control" id="tel" name="tel" placeholder="Ingrese aquí su Número de Celular"
            {{#if datosForm.tel}} value="{{datosForm.tel}}" {{/if}}>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label" >Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese aquí su Correo Electrónico"
            {{#if datosForm.email}} value="{{datosForm.email}}" {{/if}}>
        </div>
        <div class="mb-3">
            <label for="coment" class="form-label" hidden>Deja tus Comentarios</label>
            <textarea id="coment" name="coment" class="form-control" cols="30" rows="5" placeholder="Dejanos tus Comentarios..">{{datosForm.coment}}</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <p class="text-success h5 fw-bold text-center">{{estadoMsg}}</p>
        </div>
        <div class="text-center pt-3 pb-2">
            <input type="submit" value="Enviar" class="btn btn-outline-success">
        </div>
    </form>



